@model QuickBill_POS.Business_Data.FoodItemModel

@{
    bool isEdit = Model != null && Model.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Food Item" : "Add Food Item";
}


<style>
    .custom-card {
        width: 40vw; /* Increased Width */
        height: 40vh; /* Increased Height */
        border-radius: 12px;
       
    }

 
    html, body {
        overflow-x: hidden; /* Prevent scrolling */
    }

</style>


    <div class="d-flex justify-content-between align-items-center mt-3 mx-3">
        @* <h4 class="m-0">QuickBill_POS</h4> *@
        <h2>@(isEdit ? "Edit Food Item" : "Add Food Item")</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                @* <li class="breadcrumb-item"><a href="@Url.Action("FoodItemList")">Food Items</a></li> *@
                <li class="breadcrumb-item active" aria-current="page">@(isEdit ? "Edit" : "Add") Food Items</li>
            </ol>
        </nav>
    </div>

<div class="container mt-5 d-flex justify-content-center m-4 align-items-center">
    @* <div class="d-flex justify-content-center align-items-center flex-grow-1" > *@
    <div class="d-flex justify-content-center align-items-center custom">

        <div class="card custom-card shadow p-4">

            <form method="post" asp-action="AddEditFoodItem" class="needs-validation p-1 mt-2" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class=""mb-3">
                    @* <div class="col-md-8"> *@
                        @* <div class="form-group"> *@
                            <label for="Name" class="form-label">Food Item Name</label>
                            <input type="text" class="form-control shadow" id="Name" asp-for="Name" required />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        @* </div> *@
                    @* </div> *@
                </div>

                <div class="d-flex gap-2 mt-5">
                    <button type="submit" class="btn btn-@(isEdit ? "warning" : "primary")  w-100 py-2">
                        @(isEdit ? "Update" : "Add")
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100 py-2">Cancel</a>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
