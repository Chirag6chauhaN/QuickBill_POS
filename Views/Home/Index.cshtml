@model QuickBill_POS.Business_Data.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4 mt-2">
    <h4 class=" fw-bold">Welcome To QuickBill</h4>
</div>

<!-- Date Range Filter -->
<div class="card mb-4 shadow border-dotted">
    <div class="card-header bg-light fw-bold">Filter by Date Range</div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label for="dateFrom" class="form-label">From:</label>
                <input type="date" id="dateFrom" name="dateFrom" class="form-control shadow-sm"
                       value="@Model.DateFrom?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-5">
                <label for="dateTo" class="form-label">To:</label>
                <input type="date" id="dateTo" name="dateTo" class="form-control shadow-sm"
                       value="@Model.DateTo?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row text-center mt-2">
    <div class="col-md-4 mb-4">
        <div class="card shadow border-dotted mb-3 rounded-3 p-3 alert alert-success">
            <h5 class="fw-bold d-flex justify-content-md-start">Today's Total</h5>
            <div class="card-body d-flex flex-wrap justify-content-around p-1 gap-3">
                <div class="card p-3 flex-fill shadow border-dotted" style="min-width: 120px;">
                    <h5 class="mb-1 fw-bold">@Model.TodaysBillCount</h5>
                    <p class="mb-0 text-secondary fw-bold">Bills</p>
                </div>
                <div class="card p-3 flex-fill shadow border-dotted" style="min-width: 120px;">
                    <h5 class="mb-1 fw-bold">₹@Model.TodaysTotalIncome</h5>
                    <p class="mb-0 text-secondary fw-bold">Income</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow border-dotted mb-3 rounded-3 p-3 alert alert-success">
            <h5 class="fw-bold d-flex justify-content-md-start">Filtered Total</h5>
            <div class="card-body d-flex flex-wrap justify-content-around p-1 gap-3">
                <div class="card p-3 flex-fill shadow border-dotted" style="min-width: 120px;">
                    <h5 class="mb-1 fw-bold">@Model.FilterBillCount</h5>
                    <p class="mb-0 text-secondary fw-bold">Bills</p>
                </div>
                <div class="card p-3 flex-fill shadow border-dotted" style="min-width: 120px;">
                    <h5 class="mb-1 fw-bold">₹@Model.FilterTotalIncome</h5>
                    <p class="mb-0 text-secondary fw-bold">Income</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow border-dotted mb-3 rounded-3 p-3 alert alert-success">
            <h5 class="fw-bold d-flex justify-content-md-start">Overall Total</h5>
            <div class="card-body d-flex flex-wrap justify-content-around p-1 gap-3">
                <div class="card p-3 flex-fill shadow border-dotted" style="min-width: 120px;">
                    <h5 class="mb-1 fw-bold">@Model.OverallBillCount</h5>
                    <p class="mb-0 text-secondary fw-bold">Bills</p>
                </div>
                <div class="card p-3 flex-fill shadow border-dotted" style="min-width: 120px;">
                    <h5 class="mb-1 fw-bold">₹@Model.OverallTotalIncome</h5>
                    <p class="mb-0 text-secondary fw-bold">Income</p>
                </div>
            </div>
        </div>
    </div>

  
</div>

<!-- Custom CSS -->
<style>
    .border-dotted { 
        border: 1px dashed #6c757d; 
        border-radius: 8px;
     
    }
</style>
